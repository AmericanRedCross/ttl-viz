  // ENTER
  trainingLegend.enter().append('div')
  .attr('class', "legend-item")
  .html(function(d){
    return '<i class="fa fa-square" style="color:' + trainingColor(d.key) + '"></i> &nbsp;' + d.key.toLowerCase() + ' <small>(' + d.value + ')</small>';
