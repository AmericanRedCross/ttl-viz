function fetchData(){
  $.get('{{opts.nginxlocation}}api/pages/sted', function(response){
    data = response;
    var counter = 0;
    data.forEach(function(d){
      // # for the filter to work all the filtered data values need to be arrays even if all possibilities are just 1 value
